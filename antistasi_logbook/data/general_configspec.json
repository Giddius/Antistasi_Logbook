{
    "general": {
        "max_threads": {
            "converter": "integer",
            "default": "5",
            "verbose_name": "Maximum amount of Threads"
        }
    },
    "database": {
        "database_path": {
            "converter": "path",
            "default": null,
            "verbose_name": "Database Path"
        },
        "backup_database": {
            "converter": "boolean",
            "default": "False",
            "implemented": false
        },
        "backup_limit": { "converter": "integer", "default": "0" }
    },
    "updating": {
        "updates_enabled": { "converter": "boolean", "default": "True" },
        "update_interval": {
            "converter": "timedelta",
            "default": "5 min",
            "implemented": false
        },
        "max_update_time_frame": {
            "converter": "timedelta",
            "default": null
        },
        "remove_items_older_than_max_update_time_frame": {
            "converter": "boolean",
            "default": "True"
        }
    },
    "folder": {
        "local_storage_folder": { "converter": "path", "default": null }
    },
    "downloading": {
        "keep_downloaded_files": { "converter": "boolean", "default": "False" },
        "chunk_size": { "converter": "file_size", "default": null }
    },

    "parsing": {
        "record_insert_batch_size": {
            "converter": "integer",
            "default": "32767"
        }
    },
    "time": {
        "use_local_timezone": { "converter": "boolean", "default": "False" },
        "time_format": { "converter": "string", "default": "%Y-%m-%d %H:%M:%S" }
    },
    "gui": {
        "style": { "converter": "string", "default": "base" }
    },
    "debug": {
        "dev_mode": { "converter": "boolean", "default": "False" }
    },
    "logging": {
        "level": {
            "converter": "string",
            "default": "debug",
            "gui_visible": false
        },
        "max_function_name_length": {
            "converter": "integer",
            "default": "25",
            "gui_visible": false
        },
        "max_module_name_length": {
            "converter": "integer",
            "default": "25",
            "gui_visible": false
        }
    }
}
